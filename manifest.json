{
    "manifest_version": 2,
    "name": "NatureRemoController",
    "description": "Controller of AirCon with Nature Remo.",
    "version": "1.0",
    "icons": {
        "32": "assets/icon_32.png",
        "48": "assets/icon_48.png",
        "128": "assets/icon_128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "scripts/content_scripts.js"
            ],
            "css": [
                "content_scripts.css"
            ]
        }
    ],
    "background": {
        "scripts": []
    },
    "browser_action": {
        "default_icon": "assets/icon_32.png",
        "default_title": "",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "background",
        "http://*/*",
        "https://*/*"
    ]
}